<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simon.opgave.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Hangman!"
        android:id="@+id/TxtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Guess  the number between 0 - 100"
        android:id="@+id/TxtDesc"
        android:layout_below="@+id/TxtTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wrong, guess again!"
        android:id="@+id/TxtInfo"
        android:layout_below="@+id/TxtDesc"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTxtGuess"
        android:textSize="50dp"
        android:maxLines="1"
        android:minHeight="50dp"
        android:minLines="0"
        android:minWidth="150dp"
        android:maxHeight="50dp"
        android:maxLength="3"
        android:lines="1"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="false"
        android:layout_below="@+id/TxtInfo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:id="@+id/BtnGuess"
        android:minHeight="75dp"
        android:minWidth="150dp"
        android:textSize="50dp"
        android:onClick="OnClick"
        android:layout_below="@+id/EditTxtGuess"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
